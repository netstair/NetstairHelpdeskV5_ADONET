@model IEnumerable<NetstairHelpdeskV5.Models.Ticket>

@{  
        ViewData["Title"] = "Index";  
    }  
<h2>Index</h2>  
<p>  
    <a asp-action="Create">Create New</a>  
</p>  
<table class="table">  
    <thead>  
        <tr>  
            <th>  
                @Html.DisplayNameFor(model => model.Businees_Name)
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Telephone)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Contact_Person)
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Personal_Email)
            </th>  
            <th></th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var item in Model)  
{  
            <tr>  
                <td>
                    @Html.DisplayFor(modelItem => item.Businees_Name)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.Contact_Person)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.Personal_Email)
                </td>  
                <td>  
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |  
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |  
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>  
                </td>  
            </tr>  
        }  
    </tbody>  
</table>  